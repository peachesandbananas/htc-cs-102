<Window x:Class="HylandFinalProjectCSharp102.Atlas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HylandFinalProjectCSharp102"
        mc:Ignorable="d"
        Title="Atlas" Height="450" Width="800">
    <StackPanel Background="Black">
        <Image Width="700" Height="200" Source="digitalglobe.png"></Image>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Width="700" Height="120" TextWrapping="WrapWithOverflow" FontSize="24" FontFamily="Global Serif" TextAlignment="Center" Margin="0,10,0,0" Foreground="White">Welcome to the INTERPOL Atlas! Here, you will find the most comprehensive collection of facts about the world's countries, all of which have been exhaustively collected by our researchers in the field. All research is original! Absolutely no outside sources have been used!</TextBlock>
        <GroupBox Height="50" Width="700" Margin="0,0,0,0" Header="Enter a country or city name" Foreground="White">
            <TextBox Name ="atlasInput" Height="20"></TextBox>
        </GroupBox>
        <Button HorizontalAlignment="Center" Margin="0,5,0,0" Click="Button_Click">Submit</Button>
    </StackPanel>
</Window>
